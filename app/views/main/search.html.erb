<div id="search-page">
  <%= form_tag '/search', method: 'get', id: 'filters-form' do %>

    <div class="filters-list">
      <div class="filter">
        <%= text_field_tag :camera, nil, placeholder: 'camera name' %>
        <%= content_tag :ul, class: 'autocomplete-list' do %>
          <% Camera.all.each do |camera| %>
            <%= content_tag :li, camera.model %>
          <% end %>
        <% end %>
      </div>
      <div class="filter">
        <%= text_field_tag :lens, nil, placeholder: 'lens name' %>
        <%= content_tag :ul, class: 'autocomplete-list' do %>
          <% Lens.all.each do |lens| %>
            <%= content_tag :li, lens.model %>
          <% end %>
        <% end %>
      </div>
      <div class="filter">
        <%= text_field_tag :focal_length, nil, placeholder: 'focal length' %>
      </div>
      <div class="filter">
        <%= text_field_tag :aperture, nil, placeholder: 'aperture' %>
      </div>
      <div class="filter">
        <%= text_field_tag :shutter_speed, nil, placeholder: 'shutter speed' %>
      </div>
      <div class="filter">
        <%= text_field_tag :iso, nil, placeholder: 'iso' %>
      </div>
    </div>

    <%= submit_tag 'search', style: 'display: none' %>
  <% end %>

  <div class="images-list">
    <% @images.each do |image| %>
      <div class="image">
        <%= link_to image_tag(image[:thumbnail_url]), image[:page_url] %>
      </div>
    <% end %>
  </div>

  <%= paginate @images unless @images.empty? %>
</div>
